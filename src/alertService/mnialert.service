[Unit]
Description=MNI Alert Server
After=multi-user.target

[Service]
UMask=007
Environment=NODE_ENV=production
ExecStart=/usr/bin/node --run start
Group=mni
LimitNOFILE=infinity
Restart=always
StandardError=append:/var/log/mni/alertService.log
StandardOutput=append:/var/log/mni/alertService.log
Type=simple
User=predict
WorkingDirectory=/usr/local/mni/alertService

[Install]
WantedBy=multi-user.target
