[Unit]
Description=NI API Gateway
After=multi-user.target

[Service]
UMask=007
Type=simple
User=niapigw
Group=ni
Restart=on-failure
AmbientCapabilities=CAP_NET_BIND_SERVICE
WorkingDirectory=/usr/local/ni/apigw
StandardOutput=append:/var/log/ni/apigw.log
StandardError=append:/var/log/ni/apigw.log
ExecStart=/usr/local/ni/apigw/bin/apigw run -c /usr/local/ni/apigw/config/apiGateway.json

[Install]
WantedBy=multi-user.target
