[Unit]
Description=MNI API Server
After=multi-user.target

[Service]
UMask=007
AmbientCapabilities=CAP_NET_BIND_SERVICE
Environment=NODE_ENV=production
ExecStart=/usr/bin/node --run start
Group=mni
LimitNOFILE=infinity
Restart=always
StandardError=append:/var/log/mni/apiServer.log
StandardOutput=append:/var/log/mni/apiServer.log
Type=simple
User=apiserver
WorkingDirectory=/usr/local/mni/apiServer

[Install]
WantedBy=multi-user.target
