[Unit]
Description=MNI API Server
After=multi-user.target

[Service]
UMask=007
AmbientCapabilities=CAP_NET_BIND_SERVICE
Environment=NODE_ENV=production
ExecStart=/usr/bin/node --run start
Group=mni
LimitNOFILE=infinity
Restart=never
StandardError=append:/var/log/mni/api.log
StandardOutput=append:/var/log/mni/api.log
Type=simple
User=mniapi
WorkingDirectory=/usr/local/mni/api

[Install]
WantedBy=multi-user.target
