[Unit]
Description=NI API Server
After=multi-user.target

[Service]
UMask=007
AmbientCapabilities=CAP_NET_BIND_SERVICE
Environment=NODE_ENV=production
ExecStart=/usr/bin/node --run start
Group=ni
LimitNOFILE=infinity
Restart=on-failure
StandardError=append:/var/log/ni/api.log
StandardOutput=append:/var/log/ni/api.log
Type=simple
User=niapi
WorkingDirectory=/usr/local/ni/api

[Install]
WantedBy=multi-user.target
