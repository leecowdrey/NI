[Unit]
Description=MNI Fetch Service
After=multi-user.target

[Service]
UMask=007
Environment=NODE_ENV=production
ExecStart=/usr/bin/node --run start
Group=mni
LimitNOFILE=infinity
Restart=always
StandardError=append:/var/log/mni/alert.log
StandardOutput=append:/var/log/mni/alert.log
Type=simple
User=mnialert
WorkingDirectory=/usr/local/mni/alert

[Install]
WantedBy=multi-user.target
