[Unit]
Description=Identity and Access Management Server
After=multi-user.target

[Service]
Type=simple
User=NIiam
Group=NI
Restart=on-failure
AmbientCapabilities=CAP_NET_BIND_SERVICE
WorkingDirectory=/usr/local/ni/iam
StandardOutput=append:/var/log/ni/iam.log
StandardError=append:/var/log/ni/iam.log
ExecStart=/usr/local/ni/iam/bin/kc.sh start-dev

[Install]
WantedBy=multi-user.target