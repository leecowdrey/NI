[Unit]
Description=NI UI Server
After=multi-user.target

[Service]
UMask=007
AmbientCapabilities=CAP_NET_BIND_SERVICE
Environment=NODE_ENV=production
ExecStart=/usr/bin/node --run start
Group=ni
LimitNOFILE=infinity
Restart=on-failure
StandardError=append:/var/log/ni/ui.log
StandardOutput=append:/var/log/ni/ui.log
Type=simple
User=NIui
WorkingDirectory=/usr/local/ni/ui

[Install]
WantedBy=multi-user.target
